<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/light_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/sp_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="current"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=" / "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sp_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:text="total"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/sp_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >

        <ImageButton
            android:id="@+id/sp_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_trans"
            android:contentDescription="rewind"
            android:minWidth="50dp"
            android:src="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/sp_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_trans"
            android:contentDescription="@string/ar_play"
            android:minWidth="50dp"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/sp_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_trans"
            android:contentDescription="forward"
            android:minWidth="50dp"
            android:src="@android:drawable/ic_media_ff" />

    </LinearLayout>

</LinearLayout>